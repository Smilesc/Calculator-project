<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic_margin"
        android:layout_marginTop="@dimen/generic_margin"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_marginBottom="@dimen/generic_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944">


        <Button
            android:id="@+id/clear"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="@string/clear" />

        <Button
            android:id="@+id/clear_everything"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/clear_everything" />

        <Button
            android:id="@+id/point"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/point" />


        <Button
            android:id="@+id/divide"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/divide" />


        <Button
            android:id="@+id/seven"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/seven" />

        <Button
            android:id="@+id/eight"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/eight" />

        <Button
            android:id="@+id/nine"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/nine" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/multiply" />


        <Button
            android:id="@+id/four"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/four" />

        <Button
            android:id="@+id/five"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/five" />

        <Button
            android:id="@+id/six"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/six" />

        <Button
            android:id="@+id/minus"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/minus" />


        <Button
            android:id="@+id/one"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/one" />

        <Button
            android:id="@+id/two"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/two" />

        <Button
            android:id="@+id/three"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/three" />

        <Button
            android:id="@+id/plus"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/plus" />


        <Button
            android:id="@+id/zero"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/zero" />

        <Button
            android:id="@+id/memSet"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/memSet" />

        <Button
            android:id="@+id/memGet"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/memGet" />


        <Button
            android:id="@+id/equals"
            android:layout_width="@dimen/cell_width_land"
            android:layout_height="@dimen/cell_height_land"
            android:layout_row="4"
            android:layout_column="3"
            android:text="@string/equals" />


    </GridLayout>

    <TextView
        android:id="@+id/calc_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic_margin"
        android:layout_marginTop="@dimen/generic_margin"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_marginBottom="@dimen/generic_margin"
        android:gravity="end"
        android:text=""
        android:textSize="@dimen/calc_text"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492" />

    <TextView
        android:id="@+id/mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic_margin"
        android:layout_marginTop="@dimen/generic_margin"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_marginBottom="@dimen/generic_margin"
        android:text="@string/mem"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />


</android.support.constraint.ConstraintLayout>